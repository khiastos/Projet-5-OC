@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item ms-5">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Cars", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link menu ">Se déconnecter</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item ms-5">
			<a class="nav-link menu" asp-area="Identity" asp-page="/Account/Register">Créer un compte</a>
		</li>
		<li class="nav-item ms-5">
			<a class="nav-link menu" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
		</li>
	}
</ul>
