@model Projet_5.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Erreur";
}

<div class="container text-center mt-5">
    <h1 class="display-5 text-danger">Erreur</h1>
    <p>Une erreur est survenue lors du traitement de votre demande.</p>

    @if (Model?.ShowRequestId == true)
    {
        <p>
            <strong>ID de la requête :</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a href="~/" class="btn-cta mt-3">Retour à l'accueil</a>
</div>
