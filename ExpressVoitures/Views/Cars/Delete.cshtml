@model ExpressVoitures.Models.Entities.Car

@{
	ViewData["Title"] = "Supprimer";
}

<div class="form-CRUD-page">
	<h1 class="form-CRUD-title">Supprimer</h1>

	<h3 class="mb-2" style="font-family: var(--body-font); color: var(--brunTexte); font-size: 1.2rem;">
		Voulez-vous vraiment supprimer : <strong>@Model.Brand?.Name @Model.Model?.Name</strong> ?
	</h3>

	<div class="mb-3">
		<img src="@Model.ImageUrl"
			 alt="Photo"
			 class="fiche-voiture-img-suppr" />
	</div>

	<div class="form-CRUD" style="margin-bottom:18px;">
		<div class="fiche-info-suppr" style="text-align:left;">
			<div><span class="index">Prix de vente :</span> <span>@Model.SellingPrice €</span></div>
			<div><span class="index">Année :</span> <span>@Model.Year</span></div>
			<div><span class="index">Disponibilité :</span> <span>@(Model.IsAvailable ? "Disponible" : "Vendue")</span></div>
			<div><span class="index">Marque :</span> <span>@Model.Brand?.Name</span></div>
			<div><span class="index">Modèle :</span> <span>@Model.Model?.Name</span></div>
			<div><span class="index">Finition :</span> <span>@Model.Finish</span></div>
		</div>

		<form asp-action="Delete" style="margin-top:22px;">
			<input type="hidden" asp-for="ID" />
			<button type="submit" class="btn-cta form-CRUD-btn btn-suppr" style="width:200px">Confirmer la suppression</button>
			<a asp-action="Index" class="form-CRUD-back" style="margin-left:22px;">Retour</a>
		</form>
	</div>
</div>
